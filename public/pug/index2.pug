doctype html
html
    head
        title Weatherly. Minimalistic Weather App.
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel="stylesheet", href="/css/index.css")
        link(href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet")

    body.container
        div.row.logo 
            div.col.align-self-center Weatherly
        div.row.justify-content-center.search
            div.col-sm-6
                .input-group.mb-3
                    input.form-control#searchcity(type="text", placeholder="Enter your City/Location.")
                    .input-group-append
                        button.btn.btn-dark(type="button", id="button-addon2", onClick='search()') Search
        div.row.justify-content-center
            div.col-xs-4.col-sm-4.col-lg-4.result
                div#city.res New Delhi, India
                div.res 
                    h1#temperature 47&deg; C
            div.col-xs-4.col-sm-4.col-lg-4.result
                div.res
                    img#wimg.res(src="")
                div#condition.res
                    h3 Hot as Hell
            div.col-xs-4.col-sm-4.col-lg-4.result
                div#feelslike.res Feels Like 53&deg; C
                div#humidity.res Humidity is 78%
                div#winds.res Winds blowing at 97kmph



    
        script(type="text/javascript", src="../js/weather.js")


